{
  "name": "wallace-ui",
  "version": "0.1.0",
  "description": "",
  "author": "Kim kiwoon <kkw5796@gmail.com>",
  "homepage": "https://github.com/wallace5796/wallace-ui#readme",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/core/*",
    "packages/components/*",
    "packages/react-tools/*",
    "packages/styles/*",
    "tools/*"
  ],
  "preconstruct": {
    "packages": [
      "packages/*",
      "packages/core/*",
      "packages/components/*",
      "packages/react-tools/*",
      "packages/styles/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wallace5796/wallace-ui.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{md,yml,json,babelrc,eslintrc,prettierrc}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "pkg": "manypkg run",
    "prepare": "husky install",
    "commit": "cz",
    "story": "start-storybook -p 6006",
    "story:build": "build-storybook",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --maxWorkers=25% --watch --onlyChanged",
    "test:ci": "jest --colors --runInBand --ci",
    "lint": "concurrently yarn:lint:*",
    "lint:eslint": "eslint packages/**/*/src/ --ext .ts,.tsx --config .eslintrc.js",
    "clean": "yarn clean:dist && yarn clean:modules",
    "clean:dist": "manypkg exec rimraf dist",
    "clean:modules": "rimraf node_modules",
    "prebuild": "yarn && preconstruct validate",
    "build": "yarn build:babel && yarn build:cli && preconstruct build && yarn build:tokens",
    "build:babel": "yarn pkg babel-plugin build",
    "build:cli": "yarn pkg cli build",
    "build:tokens": "wallace-cli tokens packages/styles/theme",
    "release": "yarn semantic-release"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/plugin-transform-runtime": "^7.16.7",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.5",
    "@babel/preset-typescript": "^7.16.0",
    "@babel/runtime": "^7.16.3",
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@manypkg/cli": "^0.19.1",
    "@preconstruct/cli": "^2.1.5",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/github": "^8.0.2",
    "@semantic-release/npm": "^8.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@storybook/addon-actions": "^6.4.1",
    "@storybook/addon-essentials": "^6.4.1",
    "@storybook/addon-links": "^6.4.1",
    "@storybook/cli": "^6.4.0",
    "@storybook/react": "^6.4.1",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-loader": "^8.2.3",
    "commitizen": "^4.2.4",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.3.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.5.1",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.0",
    "semantic-release": "^18.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
